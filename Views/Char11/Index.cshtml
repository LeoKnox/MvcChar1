@model MvcChar1.Models.Char1ClassViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Char11" asp-action="Index">
    <p>
        <select asp-for="Char1s" asp-items="Model.Classes">
            <option value="">All</option>
        </select>

        Name: <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Ac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Hp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Str)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Con)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Dex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Wis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Ine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Char1s[0].Cha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Char1s) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Race)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Str)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Con)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cha)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
